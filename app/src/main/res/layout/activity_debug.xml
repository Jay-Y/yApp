<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical" >
    <!-- 顶部菜单/标题栏 -->
    <include
        layout="@layout/model_toolbar"/>
    
	<LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical" >

        <TextView
            android:id="@+id/debug_request"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:layout_marginTop="10dp"
            android:paddingLeft="10dp"
            android:text="当前服务器:"
            android:textColor="@color/black"
            android:textSize="18sp" />

        <EditText
            android:id="@+id/debug_et_request"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp152"
            android:layout_marginTop="@dimen/dp34"
            android:paddingLeft="10dp"
            android:textSize="18sp"
            android:text="@string/app_website"/>

        <Button
            android:id="@+id/debug_btn_ok"
            style="?android:textAppearanceSmall"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center|bottom"
            android:layout_marginTop="16dp"
            android:background="@drawable/default_button_selector"
            android:text="@string/action_ok"
            android:textColor="@color/white"
            android:textSize="14sp" />
    </LinearLayout>
    
	<!-- 底部菜单 -->
</LinearLayout>
