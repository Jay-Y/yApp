<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/item_parent"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <ImageView
        android:id="@+id/item_iv_photo"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp21"
        android:layout_marginLeft="@dimen/dp10"
        android:layout_marginRight="@dimen/dp10"
        android:maxHeight="@dimen/dp338"
        android:adjustViewBounds="true"
        android:src="@drawable/pic_load"
        android:scaleType="centerCrop"/>

    <TextView
        android:id="@+id/item_tv_time"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/dp10"
        android:layout_marginRight="@dimen/dp10"
        android:layout_below="@id/item_iv_photo"
        android:gravity="center"
        android:padding="@dimen/dp21"
        android:textColor="@color/white"
        android:textSize="@dimen/sp40"
        android:textStyle="bold"
        android:background="@color/deep_grey"
        tools:text="2015/11/11"/>
</RelativeLayout>